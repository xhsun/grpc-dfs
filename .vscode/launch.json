    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/server/cmd",
            "env": {
                "FILE_TRANSFER_SERVER_CONFIG_PATH": "../config/config.json", 
                "FILE_TRANSFER_SERVER_CERTIFICATE":"../../x509/server-cert.pem",
                "FILE_TRANSFER_SERVER_KEY":"../../x509/server-key.pem"
            }
        },
        {
            "name": "Launch CLI",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/client/cmd",
            "args": [
                "${input:command}"
            ],
            "env": {
                "FILE_TRANSFER_CLI_CERTIFICATE_PATH": "../../x509/ca-cert.pem",
            }
        }
    ],
    "inputs": [
        {
            "id": "command",
            "type": "promptString",
            "description": "Enter Command",
        }
    ]
}